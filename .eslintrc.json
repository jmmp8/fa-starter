{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "rules": {
        "semi": [
            2,
            "always"
        ],
        "@typescript-eslint/explicit-module-boundary-types": [
            0
        ],
        "@typescript-eslint/no-unused-vars": [
            1,
            {
                "args": "after-used",
                "argsIgnorePattern": "^_"
            }
        ]
    }
}
